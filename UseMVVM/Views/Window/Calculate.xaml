<Window x:Class="UseMVVM.Views.Window.Calculate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UseMVVM.Views.Window"
        xmlns:vm="clr-namespace:UseMVVM.ViewModels"
        mc:Ignorable="d"
        Title="Calculate" Height="450" Width="300" Background="#FF2E2E2E"  ResizeMode="CanMinimize">
    <Window.DataContext>
        <vm:CalculateViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Background" Value="#FF363636"/>
            <Setter Property="Foreground" Value="#FF00E8FF"/>
            <Setter Property="BorderBrush" Value="#FF363636"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" 
                 FontSize="24" TextAlignment="Right"  VerticalContentAlignment="Center"
                 Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF41AAF3"/>
        <Rectangle Grid.Row="1" Margin="5,0,5,0" Height="1" Fill="#6D2BC5FF"/>
        <TextBox Text="{Binding Result}" IsReadOnly="true" Grid.Row="2" 
                 FontSize="20" TextAlignment="Right"  VerticalContentAlignment="Center"
                 Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF41AAF3"/>
        <UniformGrid Grid.Row="3" Background="#FF464747" Rows="7" Columns="4">
            <Button Content="1"/>
            <Button Content="2"/>
            <Button Content="3"/>
            <Button Content="+"/>
            <Button Content="4"/>
            <Button Content="5"/>
            <Button Content="6"/>
            <Button Content="-"/>
            <Button Content="7"/>
            <Button Content="8"/>
            <Button Content="9"/>
            <Button Content="*"/>
            <Button Content="%"/>
            <Button Content="0"/>
            <Button Content="."/>
            <Button Content="/"/>
            <Button Content="!"/>
            <Button Content="("/>
            <Button Content=")"/>
            <Button Content="="/>
        </UniformGrid>
    </Grid>
</Window>
