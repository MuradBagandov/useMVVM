<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fa="http://schemas.fontawesome.io/icons/">

    <ControlTemplate x:Key="CloseOnWindowHead" TargetType="{x:Type Button}">
        <fa:ImageAwesome x:Name="Icon" Icon="WindowClose" Foreground="#202020"/>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" TargetName="Icon" Value="#333333"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <ControlTemplate x:Key="MinimizeOnWindowHead" TargetType="{x:Type Button}">
        <fa:ImageAwesome x:Name="Icon" Icon="WindowMaximize" Foreground="#202020"/>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" TargetName="Icon" Value="#333333"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
</ResourceDictionary>